@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "CheckBoxes";
}

@section head{
    <link href="~/Content/MyCustomeStyles.css" rel="stylesheet" />
}

@section banner{
    <h1>CheckBoxes</h1>
}

    <form id="theform" method="post">
        <div class="row">
            <div class="col-md-offset-2">
                <label id="gamegroup">Select your favorite gaming platform</label><br />
                <input type="checkbox" id="gamegroup" name="gamegroup" value="PS4" />Play Station 4<br />
                <input type="checkbox" id="gamegroup" name="gamegroup" value="PC" />Computer<br />
                <input type="checkbox" id="gamegroup" name="gamegroup" value="XboxOne" />Xbox One<br />
                <input type="checkbox" id="gamegroup" name="gamegroup" value="Nintendo" />Switch<br />
                <input type="checkbox" id="gamegroup" name="gamegroup" value="Cell" />Phone<br />
                <input type="checkbox" id="gamegroup" name="gamegroup" value="Ipad" />Ipad<br />                
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-3">
                <button type="submit" class="btn btn-primary" id="formbutton" name="formbutton" value="submit">
                    Submit
                </button>
            </div>
        </div>
    </form>